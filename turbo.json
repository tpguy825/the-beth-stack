{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"lint": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"lint:fix": {
			"cache": false
		},
		"clean": {
			"cache": false
		},
		"typecheck": {
			"dependsOn": ["^build"]
		},
		"test:watch": {
			"cache": false
		},
		"test": {
			"dependsOn": ["build"]
		}
	}
}
